{
  "name": "pddl-workspace",
  "version": "8.0.0",
  "description": "PDDL Workspace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx mocha -- out/test/**/*Test.js",
    "pretest": "npx eslint ./src/**/*.ts && npm run compile",
    "build": "tsc",
    "compile": "tsc && npm run copyToDist",
    "copyToDist": "copyfiles --error --verbose --up 2 \"./out/src/**/*.*\" ./dist/",
    "prepack": "npm run test && npm run copyToDist",
    "watch": "tsc -w",
    "clean": "rmdir out /s && rmdir dist /s"
  },
  "keywords": [
    "pddl",
    "ai",
    "planning"
  ],
  "author": "Jan Dolejsi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-dolejsi/pddl-workspace"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/chai-string": "1.4.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "12.20.34",
    "@types/nunjucks": "^3.2.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "chai-string": "^1.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.13.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "nunjucks": "^3.2.3",
    "parse-xsd-duration": "^0.5.0",
    "vscode-uri": "^3.0.3",
    "xml2js": "^0.4.23"
  }
}
